<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinWidth="800" MinHeight="600"
        WindowStyle="None" ResizeMode="CanResize"
        Closed="Window_Closed"
        AllowsTransparency="True" Background="Transparent">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"/>
    </WindowChrome.WindowChrome>

    <!-- Main Grid -->
    
    <Grid Name="grdMain" Background="Transparent">

        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <!-- Title Bar -->
            <RowDefinition Height="*"/>
            <!-- Content -->
            <RowDefinition Height="100"/>
            <!-- Music Control Bar -->
        </Grid.RowDefinitions>

        <Border Name="WindowContentBackground" Grid.ColumnSpan="3" Grid.RowSpan="3" 
                Background="{Binding CurrentTheme.WindowContentBackground.Brush}" 
                CornerRadius="15"/>

        <!-- Row 1 Grid -->
        
        <Grid Grid.Row="1" Margin="10, 0, 10, 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="220" MinWidth="220" MaxWidth="300"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <!-- Column 0 Left Side Bar -->
            
            <DockPanel LastChildFill="True" Grid.Column="0" Grid.Row="1" Margin="15, 30">
                <StackPanel DockPanel.Dock="Top">
                    
                    <TextBlock Text="Spice &amp; Co" FontSize="18" FontWeight="Bold"></TextBlock>

                    <TextBlock Text="Curation" Margin="0, 35, 0, 0" FontWeight="Bold" FontSize="15" Foreground="#494454"></TextBlock>

                    <ToggleButton Content="For you"
                          Height="35"
                          Margin="0,25,0,0"
                          FontSize="14"
                          BorderBrush="Transparent">
                        <ToggleButton.Style>
                            <Style TargetType="ToggleButton">
                                <Setter Property="Background" Value="{Binding CurrentTheme.MusicControlBackground.Brush}"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>

                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border x:Name="border"
                                            CornerRadius="10"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}">
                                              <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Content="{TemplateBinding Content}"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background"
                                                    Value="{Binding CurrentTheme.WindowAccent.Brush}"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="White"/>
                                                </Trigger>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="White"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ToggleButton.Style>
                    </ToggleButton>

                    <ToggleButton Content="Your Library"
                      Height="35"
                      Margin="0,25,0,0"
                      FontSize="14"
                      BorderBrush="Transparent">
                        <ToggleButton.Style>
                            <Style TargetType="ToggleButton">
                                <Setter Property="Background" Value="{Binding CurrentTheme.MusicControlBackground.Brush}"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>

                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border x:Name="border"
                                                CornerRadius="10"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Content="{TemplateBinding Content}"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background"
                                                      Value="{Binding CurrentTheme.WindowAccent.Brush}"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="White"/>
                                                </Trigger>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="White"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ToggleButton.Style>
                    </ToggleButton>

                    <ToggleButton Content="Browse"
                      Height="35"
                      Margin="0,25,0,0"
                      FontSize="14"
                      BorderBrush="Transparent">
                        <ToggleButton.Style>
                            <Style TargetType="ToggleButton">
                                <Setter Property="Background" Value="{Binding CurrentTheme.MusicControlBackground.Brush}"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>

                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border x:Name="border"
                                                CornerRadius="10"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Content="{TemplateBinding Content}"/>         
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background"
                                                        Value="{Binding CurrentTheme.WindowAccent.Brush}"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="White"/>
                                                </Trigger>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="White"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ToggleButton.Style>
                    </ToggleButton>

                    <TextBlock Text="My Music" Margin="0, 40, 0, 0" FontWeight="Bold" FontSize="15" Foreground="#494454"></TextBlock>

                    <ToggleButton Content="Albums"
                       Height="35"
                       Margin="0,25,0,0"
                       FontSize="14"
                       BorderBrush="Transparent">
                        <ToggleButton.Style>
                            <Style TargetType="ToggleButton">
                                <Setter Property="Background" Value="{Binding CurrentTheme.MusicControlBackground.Brush}"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>

                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border x:Name="border"
                             CornerRadius="10"
                             Background="{TemplateBinding Background}"
                             BorderBrush="{TemplateBinding BorderBrush}">
                                                <ContentPresenter HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Content="{TemplateBinding Content}"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background"
                                     Value="{Binding CurrentTheme.WindowAccent.Brush}"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="White"/>
                                                </Trigger>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="White"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ToggleButton.Style>
                    </ToggleButton>

                    <ToggleButton Content="Artists"
                           Height="35"
                           Margin="0,25,0,0"
                           FontSize="14"
                           BorderBrush="Transparent">
                        <ToggleButton.Style>
                            <Style TargetType="ToggleButton">
                                <Setter Property="Background" Value="{Binding CurrentTheme.MusicControlBackground.Brush}"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>

                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border x:Name="border"
                                                 CornerRadius="10"
                                                 Background="{TemplateBinding Background}"
                                                 BorderBrush="{TemplateBinding BorderBrush}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Content="{TemplateBinding Content}"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background"
                                                       Value="{Binding CurrentTheme.WindowAccent.Brush}"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="White"/>
                                                </Trigger>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="White"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ToggleButton.Style>
                    </ToggleButton>
                </StackPanel>
                
                <Button Content="New Playlist" Height="35" Margin="0, 25, 0, 0" FontSize="14" VerticalAlignment="Bottom" Background="{Binding CurrentTheme.WindowAccent.Brush}">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Content="{TemplateBinding Content}"></ContentPresenter>
                                <Border.Effect>
                                    <DropShadowEffect Color="Black"
                                        Direction="270"
                                        ShadowDepth="2"
                                        Opacity="0.15"
                                        BlurRadius="8"/>
                                </Border.Effect>
                            </Border>
                            
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="LightBlue"></Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="White"></Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </DockPanel>
            
            <!-- Column 2 Right Side Bar -->

            <StackPanel Grid.Column="2" Grid.Row="1">

                <Border Height="250" VerticalAlignment="Top" Margin="15, 10, 25, 10" CornerRadius="15" Background="{Binding CurrentTheme.MusicControlBackground.Brush}">
                    <Border.Effect>
                        <DropShadowEffect Color="Black"
                          Direction="270"
                          ShadowDepth="2"
                          Opacity="0.15"
                          BlurRadius="8"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="About the Album" Margin="10, 15, 0, 0" FontWeight="Bold" Foreground="{Binding CurrentTheme.CurrentSongTitleForeground.Brush}"></TextBlock>
                        <TextBlock Text="{Binding AlbumDescription}" Margin="10, 15, 0, 0" FontWeight="SemiBold" Foreground="{Binding CurrentTheme.CurrentSongTitleForeground.Brush}"></TextBlock>
                    </StackPanel>

                </Border>

                <TextBlock Text="Most Played" FontWeight="Bold" Margin="15, 15, 0, 0" FontSize="15" Foreground="#494454"></TextBlock>
                <ListBox Height="200" Grid.Column="1" Grid.Row="1" Margin="15, 10, 25, 10" VerticalAlignment="Center" HorizontalAlignment="Stretch" BorderThickness="0" ScrollViewer.VerticalScrollBarVisibility="Hidden" ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                 Background="Transparent" Foreground="{Binding CurrentTheme.ListBoxItemForeground.Brush}">

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0, 4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="1" Orientation="Vertical">
                                    <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="14" Foreground="Black"/>
                                    <TextBlock Text="{Binding Artist}" FontSize="12" Foreground="Gray"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="5"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F0F0F0"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#E6E6E6"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </StackPanel>
                

            <!-- Column 1 Center Bar -->
            
            <Border CornerRadius="13" Background="{Binding CurrentTheme.MusicControlBackground.Brush}" Margin="10, 10, 10, 20" Grid.Column="1">
                <Border.Effect>
                    <DropShadowEffect Color="Black"
                          Direction="270"
                          ShadowDepth="2"
                          Opacity="0.15"
                          BlurRadius="8"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Border Height="40" CornerRadius="13" BorderThickness="0" BorderBrush="{Binding CurrentTheme.WindowContentBackground.Brush}" 
                    Background="White" Grid.Row="0" Margin="40, 30, 0, 30" Grid.Column="0" Width="250" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Margin="10" VerticalAlignment="Center">
                    <Image Width="20" Height="20" Source="/Assets/icons8-search-50.png" VerticalAlignment="Center"></Image>
                    <TextBox Text="Search" VerticalAlignment="Center" Background="Transparent" BorderBrush="Transparent"></TextBox>
                    </StackPanel>
                    </Border>
                        

                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="0, 30, 40, 30" HorizontalAlignment="Right">
                        <Ellipse Width="40" Height="40" Stroke="Black" StrokeThickness="0" Margin="0, 0, 10, 0">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/Assets/userphoto.png"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock Text="Hi, Abdul" VerticalAlignment="Center"></TextBlock>
                    </StackPanel>
                   
                    <!-- Your Library Grid -->

                    <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="40, 0, 40, 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"></RowDefinition>
                            <RowDefinition Height="9*"></RowDefinition>
                        </Grid.RowDefinitions>
                        
                        
                        <TextBlock Grid.Row="0" x:Name="tbYourLibrary" Text="Your Library" FontSize="18" FontWeight="Bold" 
                        Foreground="{Binding CurrentTheme.CurrentSongTitleForeground.Brush}" HorizontalAlignment="Left"/>

                        <ListBox Height="300" Grid.Column="1" Grid.Row="1" Margin="0, 20, 16, 0" VerticalAlignment="Center" HorizontalAlignment="Stretch" BorderThickness="0" ScrollViewer.VerticalScrollBarVisibility="Hidden" ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                        Background="Transparent" Foreground="{Binding CurrentTheme.ListBoxItemForeground.Brush}" ItemsSource="{Binding MusicPlayerCache.Albums}" SelectedItem="{Binding MusicPlayerCache.SelectedAlbum, Mode=TwoWay}">

                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0, 10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>

                                        <Image Source="{Binding ImagePath}" Grid.Column="0" Width="35"></Image>
                                        <StackPanel Grid.Column="1" Orientation="Vertical" Margin="7, 0, 0, 0">
                                            <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="14" Foreground="Black"/>
                                            <TextBlock Text="{Binding Artist}" FontSize="12" Foreground="Gray"/>
                                        </StackPanel>
                                        
                                        <TextBlock x:Name="PlayIcon" Text="▶" Foreground="Green" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Right" Visibility="Collapsed"/>
                                        
                                        <Button Grid.Column="3" HorizontalAlignment="Right" Background="Transparent" BorderBrush="Transparent" Width="15" Margin="0, 0, 30, 0">
                                            <Button.ContentTemplate>
                                                <DataTemplate>
                                                    <Image Source="/Assets/icons8-ellipsis-30.png"></Image>
                                                </DataTemplate>
                                            </Button.ContentTemplate>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>

                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="5"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border Background="{TemplateBinding Background}"
                                                        SnapsToDevicePixels="True">
                                                    <ContentPresenter/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F0F0F0"/>
                                            <Setter Property="Cursor" Value="Hand"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </Grid>
                    
                    <!-- Album Contents Grid -->

                    <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="40, 0, 40, 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Album Contents" FontSize="18" FontWeight="Bold" Margin="0, 30, 0, 0"></TextBlock>

                        <ListBox Margin="0, 20, 0, 0" Grid.Row="1" ItemsSource="{Binding MusicPlayerCache.SelectedAlbum.Songs}" SelectedItem="{Binding MusicPlayerCache.CurrentSong, Mode=TwoWay}"
                        Background="Transparent" BorderThickness="0" ScrollViewer.VerticalScrollBarVisibility="Hidden" ScrollViewer.HorizontalScrollBarVisibility="Hidden" AlternationCount="1000">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0, 10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock VerticalAlignment="Center" Margin="0, 0, 25, 0" Grid.Column="0" Text="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=(ItemsControl.AlternationIndex), StringFormat={}{0:0}}"/>
                                        <StackPanel Grid.Column="1" Orientation="Vertical">
                                        <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="14" Foreground="Black"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="2" Margin="0, 0, 80, 0" Text="{Binding Duration}" HorizontalAlignment="Right" FontWeight="SemiBold" FontSize="14" Foreground="Black"/>
                                        <Button Grid.Column="3" HorizontalAlignment="Right" Background="Transparent" BorderBrush="Transparent" Width="15" Margin="0, 0, 30, 0">
                                            <Button.ContentTemplate>
                                                <DataTemplate>
                                                    <Image Source="/Assets/icons8-ellipsis-30.png"></Image>
                                                </DataTemplate>
                                            </Button.ContentTemplate>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>

                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="5"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border Background="{TemplateBinding Background}">
                                                    <ContentPresenter/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F0F0F0"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#E6E6E6"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.ItemContainerStyle>

                        </ListBox>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- Row 2 Music Control Grid -->

        <Grid Grid.Row="2" Grid.ColumnSpan="3" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.25*"/>
                <ColumnDefinition Width="15*"/>
                <ColumnDefinition Width="0.25*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="110"></RowDefinition>
            </Grid.RowDefinitions>
            
            <Border x:Name="MusicControlBar" 
                Background="{Binding CurrentTheme.MusicControlBackground.Brush}"
                CornerRadius="13"
                Margin="10, 10, 10, 20"
                Grid.Column="1"    
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Border.Effect>
                    <DropShadowEffect Color="Black"
                    Direction="270"
                    ShadowDepth="3"
                    Opacity="0.15"
                    BlurRadius="8"/>
                </Border.Effect>

                <!-- Music Control Bar -->

                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>


                    <!-- Current Song View Grid -->

                    <Grid Grid.Column="0" Grid.RowSpan="2" Margin="10, 0, 0, 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                    

                    <Image Width="40" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20, 0, 0, 0" Grid.Column="0" Source="{Binding MusicPlayerCache.SelectedAlbum.ImagePath}"></Image>
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Grid.Column="1" Margin="13, 0, 0, 0">
                        <TextBlock FontSize="13" VerticalAlignment="Center" HorizontalAlignment="Left" Text="{Binding MusicPlayerCache.CurrentSong.Title}"></TextBlock>
                            <TextBlock Foreground="#494454" Text="{Binding MusicPlayerCache.SelectedAlbum.Artist}"></TextBlock>
                        </StackPanel>
                    </Grid>
                    <!-- Song Player Controls Grid -->
                    
                    <Grid Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" Height="40">
                        <Viewbox Stretch="Uniform">
                            <Grid>
                                
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>


                                <Button Grid.Row="0" Grid.Column="0" Background="Transparent" BorderBrush="Transparent" Width="40" Margin="0, 0, 30, 0">
                                    <Button.ContentTemplate>
                                        <DataTemplate>
                                            <Image Source="/Assets/icons8-refresh-50.png"></Image>
                                        </DataTemplate>
                                    </Button.ContentTemplate>
                                </Button>
                                
                                <Button Grid.Row="0" Grid.Column="1" Width="60" Background="Transparent" BorderBrush="Transparent">
                                    <Button.ContentTemplate>
                                        <DataTemplate>
                                            <Image Source="/Assets/icons8-end-50 (1).png"></Image>
                                        </DataTemplate>
                                    </Button.ContentTemplate>
                                </Button>

                                <ToggleButton Grid.Row="0" Grid.Column="2"
                                  Background="Transparent" BorderBrush="Transparent">
                                    <ToggleButton.Style>
                                        <Style TargetType="ToggleButton">
                                            <Setter Property="ContentTemplate">
                                                <Setter.Value>
                                                    <DataTemplate>
                                                        <!-- Play icon -->
                                                        <Image Source="/Assets/icons8-circled-play-button-50.png"/>
                                                    </DataTemplate>
                                                </Setter.Value>
                                            </Setter>

                                            <Style.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter Property="ContentTemplate">
                                                        <Setter.Value>
                                                            <DataTemplate>
                                                                <!-- Pause icon -->
                                                                <Image Source="/Assets/icons8-pause-button-50.png"/>
                                                            </DataTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>

                                <Button Grid.Row="0" Grid.Column="3" Width="60"  Background="Transparent" BorderBrush="Transparent">
                                    <Button.ContentTemplate>
                                        <DataTemplate>
                                            <Image Source="/Assets/icons8-end-50.png"></Image>
                                        </DataTemplate>
                                    </Button.ContentTemplate>
                                </Button>
                                <Button Grid.Row="0" Grid.Column="4" Background="Transparent" BorderBrush="Transparent" Width="40" Margin="30, 0, 0, 0">
                                    <Button.ContentTemplate>
                                        <DataTemplate>
                                            <Image Source="/Assets/icons8-restart-50.png"></Image>
                                        </DataTemplate>
                                    </Button.ContentTemplate>
                                </Button>
                            </Grid>
                        </Viewbox>
                    </Grid>
                    <Button Margin="0, 0, 20, 0" Click="SwitchButton_Click" Width="20" Background="Transparent" BorderBrush="Transparent" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="2" Grid.RowSpan="2">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <Image Source="/Assets/icons8-ellipsis-30.png"></Image>
                            </DataTemplate>
                        </Button.ContentTemplate>

                    </Button>
                    <Slider Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" Height="30">
                        <Slider.Template>
                            <ControlTemplate TargetType="Slider">
                                <Grid>
                                    <!-- Track Background -->
                                    <Border Background="{Binding CurrentTheme.WindowContentBackground.Brush}" Height="6" VerticalAlignment="Center" CornerRadius="3"/>

                                    <!-- Actual Track -->
                                    <Track x:Name="PART_Track" 
                                       Maximum="{TemplateBinding Maximum}"
                                       Minimum="{TemplateBinding Minimum}"
                                       Value="{Binding Value, RelativeSource={RelativeSource TemplatedParent}}">

                                        <!-- Decrease RepeatButton (left of thumb) -->
                                        <Track.DecreaseRepeatButton>
                                            <RepeatButton Command="Slider.DecreaseLarge" 
                                      Background="Transparent" 
                                      BorderThickness="0"/>
                                        </Track.DecreaseRepeatButton>

                                        <!-- Thumb -->
                                        <Track.Thumb>
                                            <Thumb Width="10" Height="10" Background="White" BorderBrush="Gray" BorderThickness="1"/>
                                        </Track.Thumb>

                                        <!-- Increase RepeatButton (right of thumb) -->
                                        <Track.IncreaseRepeatButton>
                                            <RepeatButton Command="Slider.IncreaseLarge" 
                                      Background="Transparent" 
                                      BorderThickness="0"/>
                                        </Track.IncreaseRepeatButton>
                                    </Track>
                                </Grid>
                            </ControlTemplate>
                        </Slider.Template>
                    </Slider>
                </Grid>
            </Border>
        </Grid>

        <!-- Title Bar Grid -->
        
        <Border Background="Black" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" CornerRadius="10">
            <Grid x:Name="grdTitle">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="130"/>
                </Grid.ColumnDefinitions>

                <Border Background="{Binding Path=CurrentTheme.WindowAccent.Brush}" 
                        Margin="-8,7,8,7" CornerRadius="1" Grid.Row="0" Grid.Column="0"/>

                <TextBlock Name="tbWindowTitle" Text="{Binding Path=WindowTitle}" 
                           Foreground="{Binding Path=CurrentTheme.WindowTitleForeground.Brush}" 
                           VerticalAlignment="Center" HorizontalAlignment="Center"
                           Grid.Row="0" Grid.Column="1"/>
                <Border Name="borderWindowMove" Grid.Row="0" Grid.Column="1" Background="Transparent" MouseDown="borderWindowMove_MouseDown"/>

                <StackPanel x:Name="spHeaderItems" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">

                    <Grid Name="grdSettings" VerticalAlignment="Stretch" 
                          MouseEnter="grdSettings_MouseEnter" MouseLeave="grdSettings_MouseLeave" 
                          MouseLeftButtonUp="grdSettings_MouseLeftButtonUp">
                        <TextBlock Name="tbSettings" Text="⚙" Foreground="White" Width="32" FontSize="11" TextAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                    <Grid Name="grdMinimize" VerticalAlignment="Stretch" 
                          MouseEnter="grdMinimize_MouseEnter" MouseLeave="grdMinimize_MouseLeave" 
                          MouseLeftButtonUp="grdMinimize_MouseLeftButtonUp">
                        <TextBlock Name="tbMinimize" Text="─" Foreground="White" Width="32" TextAlignment="Center" VerticalAlignment="Center" />
                    </Grid>
                    <Grid Name="grdResize" VerticalAlignment="Stretch" 
                          MouseEnter="grdResize_MouseEnter" MouseLeave="grdResize_MouseLeave" 
                          MouseLeftButtonUp="grdResize_MouseLeftButtonUp">
                        <TextBlock Name="tbResize" Text="🗗" Foreground="White" Width="32" TextAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                    <Grid Name="grdClose" VerticalAlignment="Stretch"  
                          MouseEnter="grdClose_MouseEnter" MouseLeftButtonUp="grdClose_MouseLeftButtonUp" MouseLeave="grdClose_MouseLeave">
                        <TextBlock Name="tbClose" Text="✕" Foreground="White" Width="32" TextAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
    
</Window>
